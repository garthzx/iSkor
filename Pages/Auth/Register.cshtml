@page
@model EventScoringWeb.Pages.Auth.RegisterModel
@{
    Layout = "_NoDashboardLayout";
}

<div id="page-content-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-7">
                <div class="form-card">
                    <h1 class="h1 form-title">Sign Up</h1>
                    <form method="POST">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="mb-3">
                            <label class="form-label text-secondary" asp-for="@Model.Input.FirstName"></label>
                            <input class="form-control" type="text" asp-for="@Model.Input.FirstName" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-secondary" asp-for="@Model.Input.LastName"></label>
                            <input class="form-control" type="text" asp-for="@Model.Input.LastName" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-secondary" asp-for="@Model.Input.Email"></label>
                            <input class="form-control" type="email" asp-for="@Model.Input.Email" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-secondary" asp-for="Input.Password"></label>
                            <input class="form-control" type="password" asp-for="Input.Password" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label text-secondary" asp-for="Input.ConfirmPassword"></label>
                            <input class="form-control" type="password" asp-for="Input.ConfirmPassword" />
                        </div>
                        <div>
                            <button type="submit" class="btn btn-global">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-center">
    
</div>